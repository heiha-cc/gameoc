        $iLoginID = $iRoleID;
        $params = array(array($iRoleID, SQLSRV_PARAM_IN),
            array($iLoginID, SQLSRV_PARAM_IN),
            array($this->utf8ToGb2312($strLoginName), SQLSRV_PARAM_IN),
