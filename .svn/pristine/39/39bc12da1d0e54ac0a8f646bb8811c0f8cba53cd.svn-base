    public function addAuthProcess($iRoleID,$iLoginID,$strLoginName,$iOperationType,$ExtendID,$iNumber,$strPayment,$strReason,$strRemarks,$iRequirement,$ShowType,$SysUserName,$iFID)
    {
        /*if(!$iLoginID && !$strLoginName){
