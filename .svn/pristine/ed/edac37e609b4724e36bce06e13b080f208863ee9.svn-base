    //删除房间
    public function deleteroom()
    {
        $roomId = intval(input('RoomID'));
        $data = ['code' => 0, 'msg' => ''];
        if (!$roomId) {
            $data['code'] = 1;
            $data['msg']  = '请选择要删除的房间';
            return json($data);
        }
        $del = ['id' => $roomId];
        $res = Api::getInstance()->sendRequest($del, 'room', 'delroom');
        return json(['code' => $res['code'], 'msg' => $res['message']]);
    }


