if (!function_exists('generateSalt')) {
    function generateSalt()
    {
        $str  = 'qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM1234567890';
        $salt = strtolower(substr(str_shuffle($str), 10, 6));
        return $salt;
    }
