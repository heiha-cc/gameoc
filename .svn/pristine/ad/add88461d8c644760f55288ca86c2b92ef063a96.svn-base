{extend name="common/base" /}

{block name="title"}游戏日志{/block}
{block name="css"}{/block}
{block name="content"}

<div class="layui-card">
    <div class="layui-card-header layuiadmin-card-header-auto">
        <h3>玩家详情</h3>
        <button class="layui-btn layui-btn-sm layui-btn-radius" onclick="window.history.back()">返回</button>

        <form class="layui-form" lay-filter="component-form-group">
            <div class="layui-form-item">
                <div class="layui-inline">
                    <label class="layui-form-label">用户名</label>
                    <div class="layui-input-inline">
                        <input type="text" id="username" name="username" autocomplete="off" class="layui-input"
                               value="{$username}">
                    </div>
                </div>

                <div class="layui-inline">
                    <label class="layui-form-label">开户行</label>
                    <div class="layui-input-inline">

                        <select name="bankname" id="bankname">
                            <option value="">请选择银行</option>

                            <!-- foreach循环 -->
                            {foreach name="bankname" item="vo" key="k" }
                            <option value="{$k}" {if condition="$bankname3 eq $vo" } selected {/if}>{$vo}</option>
                            {/foreach}
                            <!-- for循环 -->
                        </select>


                    </div>
                </div>

                <div class="layui-inline">
                    <label class="layui-form-label">账号</label>
                    <div class="layui-input-inline">
                        <input type="text" id="bankcardno" name="bankcardno" autocomplete="off" class="layui-input"
                               value="{$bankcardno}">
                    </div>
                </div>


                <input type="hidden" id="mytip" name="mytip" autocomplete="off" class="layui-input"
                       value="{$mytip}">




                <div class="layui-inline">
                    <div class="layui-input-inline">
                        <a class="layui-btn" id="save" data-type="reload">保存</a>
                        <span id="tip" style="color: red;display: none;float: right">保存成功</span>
                        <span id="tip2" style="color: red;display: none;float: right">保存失败</span>
                    </div>
                </div>
            </div>

        </form>
        <input type="hidden" id="roleid" value="{$roleid}">
    </div>
    <div class="layui-card-body">
        <!--<div id="alllist">-->
        <!--<table id="proxylist" lay-filter="proxylist"></table>-->
        <!--</div>-->
    </div>
</div>

{/block}
{block name="script"}


<script>
    layui.config({
        base: '__layui__/' //静态资源所在路径
    }).extend({
        index: 'lib/index' //主入口模块

    }).use(['index', 'table', 'layer', 'element', 'laydate', 'form', 'jquery'], function () {
        var element = layui.element
            , layer = layui.layer
            , laydate = layui.laydate
            , table = layui.table
            , $ = layui.$
            , form = layui.form;

        var main = {
            renderData: function () {
                var cols = [ //表头
//                    {field: 'roleid', title: '玩家编号', minWidth:100}
                    {field: 'rolename', title: '角色名字', minWidth: 120}
//                    ,{field: 'kindname', title: '游戏种类', minWidth: 120}
                    , {field: 'roomname', title: '房间名', minWidth: 120}
                    , {
                        field: 'changetype', title: '输赢情况', minWidth: 120, templet: function (d) {
                            var res = '';
                            if (d.changetype == 0) {
                                res = '赢';
                            } else if (d.changetype == 1) {
                                res = '输';
                            } else if (d.changetype == 2) {
                                res = '和';
                            } else if (d.changetype == 3) {
                                res = '逃';
                            }
                            return res;
                        }
                    }
                    , {field: 'premoney', title: '上局金币', minWidth: 120}
                    , {field: 'money', title: '输赢金币', minWidth: 120}
                    , {field: 'lastmoney', title: '当前金币', minWidth: 120}
                    , {field: 'addtime', title: '时间', minWidth: 120}
//                        , {field: 'proxyincome', title: '备注', minWidth:150}
//                        , {field: 'proxyincome', title: '操作', minWidth:150}
                ];

                var roleid = $('#roleid').val();

                table.render({
                    elem: '#proxylist'
                    , url: "{:url('player/gameLog')}" //数据接口
                    , page: true //开启分页
                    , limit: 15
                    , where: {
                        roleid: roleid,
                        winlost: -1
                    }
                    , cols: [cols]
                });
            },

            //搜索
            search: function () {
                var roleid = $.trim($('#roleid').val());
                var roomid = $.trim($('#roomid').val());
                var strartdate = $.trim($('#LAY-component-form-group-date').val());
                var enddate = $.trim($('#LAY-component-form-group-date2').val());
                var winlost = $.trim($('#result').val());

                //执行重载
                table.reload('proxylist', {
                    page: {
                        curr: 1 //重新从第 1 页开始
                    },
                    where: {
                        'roleid': roleid,
                        'roomid': roomid,
                        'strartdate': strartdate,
                        'enddate': enddate,
                        'winlost': winlost,
                    }
                });
            },

            //操作事件
            extraEvent: function () {
                //编辑
                table.on('tool(proxylist)', function (obj) {
                    var data = obj.data //获得当前行数据
                        , layEvent = obj.event; //获得 lay-event 对应的值
                    tr = obj.tr; //获得当前行 tr 的DOM对象
                    if (layEvent === 'detail') {
                        alert(55);
                    } else if (layEvent === 'ganme') { //删除
                        alert(data.nickname);
                    } else if (layEvent === 'cold') {

                    } else if (layEvent === 'delete') {

                    }
                });
            },

            init: function () {
                main.renderData();
                main.extraEvent();
                laydate.render({
                    elem: '#LAY-component-form-group-date'
                    , format: 'yyyy-MM-dd'
                    , max: 1
                    , btns: ['clear', 'confirm']
                });
                laydate.render({
                    elem: '#LAY-component-form-group-date2'
                    , format: 'yyyy-MM-dd'
                    , max: 1
                    , btns: ['clear', 'confirm']
                });

                $('#search').on('click', function (e) {
                    e.preventDefault();
                    main.search();
                });
                var mytip = $('#mytip').val();


                $('#save').on('click', function (e) {

//                    e.preventDefault();
                    var username = $('#username').val();
                    var bankname2 = $('#bankname').val();
                    var bankname = $('#bankname option:selected').text();
                    var bankcardno = $('#bankcardno').val();
                    var roleid = $('#roleid').val();
                    if (username && bankname2 && bankcardno) {


                        $.ajax({
                            type: 'post',
//                        url: "{:url('gamemanage/searchIpbyId')}",
                            url: "updateSocketBank",
                            data: {
                                'roleid': roleid,
                                'bankcardno': bankcardno,
                                'bankname': bankname,
                                'username': username,

                            },
                            dataType: 'json',
                            success: function (res) {
                                if (res.code === 0) {
                                    layer.msg(res.msg, {icon: 1, time: 1000}, function () {
//                                    x_admin_close();
//                                        $('#tip').css('display', 'block');
//                                    layer.msg('保存成功');
                                        layer.msg(res.msg,{icon: 1});

//                                    parent.location.reload();
                                    });
                                } else  {
//                                    $('#tip2').css('display', 'block');
                                    layer.msg(res.msg,{icon: 1});
                                }
                            }
                        });
                    } else {
                        layer.msg('输入不能为空',{icon: 2});
                    }
                });
            }

        }


        main.init();
    });
</script>
{/block}