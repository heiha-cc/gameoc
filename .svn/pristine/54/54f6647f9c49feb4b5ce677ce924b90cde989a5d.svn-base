<script type="text/javascript">
    $(function(){



       $(".many-tables").click(function(event) {
         //询问框
        layer.confirm('是否确认备份？', {
          btn: ['确定','取消'] //按钮
        }, function(){
             var data = tableCheck.getData();
        backup(data);
        });

       
       });
    })
    //备份数据库
    function backup(tables){
        layer.load();
        $.ajax({
            url: "<?php echo url('admin/db_manage/backup'); ?>",
            type: 'post',
            dataType: 'json',
            data: {tables: tables},
        })
        .done(function(data) {
            layer.closeAll('loading');
            if(data.msg!==0){
                layer.alert(data.msg);
            }else{
                layer.msg('备份失败');
            }
        })
        
    }


    function optimize(table_name){
        layer.load();
        $.ajax({
            url: "<?php echo url('admin/db_manage/optimize'); ?>",
            type: 'post',
            dataType: 'json',
            data: {table_name: table_name},
        })
        .done(function(data) {
            layer.closeAll('loading');
            if(data.msg!==0){
                layer.alert(data.msg);
            }else{
                layer.msg('失败');
            }
        }) 
    }

    function repair(table_name){
        layer.load();
        $.ajax({
            url: "<?php echo url('admin/db_manage/repair'); ?>",
            type: 'post',
            dataType: 'json',
            data: {table_name: table_name},
        })
        .done(function(data) {
            layer.closeAll('loading');
            if(data.msg!==0){
                layer.alert(data.msg);
            }else{
                layer.msg('失败');
            }
        }) 
    }


</script>
