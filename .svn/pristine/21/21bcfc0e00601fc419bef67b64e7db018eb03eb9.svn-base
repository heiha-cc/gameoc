{extend name="common/base" /}

{block name="title"}向玩家转账{/block}
{block name="css"}{/block}
{block name="content"}



<form class="layui-form" lay-filter="component-form-group">
    <div class="layui-form-item">
        <div class="layui-inline">
            <label class="layui-form-label">关键词</label>
            <div class="layui-input-inline">
                <input type="text" id="roleid" name="roleid" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label">
                申请时间</label>
            <div class="layui-input-inline" style="width: 100px;">
                <input type="text" name="start" id="LAY-component-form-group-date" autocomplete="off" class="layui-input">
            </div>
            <div class="layui-form-mid">
                -
            </div>
            <div class="layui-input-inline" style="width: 100px;">
                <input type="text" name="end" id="LAY-component-form-group-date2" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-inline">
            <label class="layui-form-label">申请状态</label>
            <div class="layui-input-inline">
                <select name="condition" id="classid" name="classid">
                    <option value="-1" selected>全部</option>

                    <option value="2">批准</option>
                    <option value="3">拒绝</option>
                    <option value="1">待审核</option>
                </select>
            </div>
        </div>
        <div class="layui-inline">
            <div class="layui-input-inline">
                <a class="layui-btn" id="search" data-type="reload">搜索</a>
                <button type="reset" class="layui-btn layui-btn-primary">重置</button>
            </div>
        </div>


        <div class="layui-form-item">
            <label class="layui-form-label">操作类型</label>
            <div class="layui-input-block">
                <input type="checkbox" name="like[write]" title="支付宝" checked>
                <input type="checkbox" name="like[read]" title="银行" checked>


            </div>
        </div>

    </div>
</form>
<div class="layui-card">
    <div class="layui-card-header layuiadmin-card-header-auto">


    </div>
    <div class="layui-card-body">
        <button style="margin-bottom: 10px;" class="layui-btn" onclick="x_admin_show('向玩家转账','addTransfer')">
            <i class="layui-icon layui-icon-add-circle"></i>
        </button>
        <div id="alllist">
            <table id="proxylist" lay-filter="proxylist"></table>
        </div>
    </div>
</div>


{/block}
{block name="script"}

<script type="text/html" id="msg-bar">

    <a class="layui-btn layui-btn-xs " lay-event="ganme">申请</a>
    <a class="layui-btn layui-btn-xs" lay-event="cold">退回</a>

</script>

<script>
    layui.config({
        base: '__layui__/' //静态资源所在路径
    }).extend({
        index: 'lib/index' //主入口模块

    }).use(['index', 'table', 'layer', 'element', 'laydate', 'form', 'jquery'], function() {
        var element = layui.element
            ,layer = layui.layer
            ,laydate = layui.laydate
            ,table = layui.table
            ,$ = layui.$
            ,form = layui.form;
        var main = {
            renderData : function() {
                var cols = [ //表头

                    {field: 'addtime', title: '操作时间', minWidth:120}
                    ,{field: 'roleid', title: '玩家ID', minWidth:120}
                    , {field: 'classid', title: '转账类型', minWidth:120, templet : function(d) {
                        var classname = '';
                        if (d.classid == 1) {
                            classname = '测试专用赠送';
                        } else if (d.classid == 2) {
                            classname = '充值手工补发';
                        } else if (d.classid == 3) {
                            classname = '转给超级玩家';
                        } else {
                            classname = '其他';
                        }

                        return classname;
                    }}
                    , {field: 'totalmoney', title: '金额', minWidth:150}

//                    , {field: 'proxyincome', title: '支出账户', width:150}
                    , {field: 'uid', title: '操作人ID', minWidth:80}
                    , {field: 'adduser', title: '操作人', minWidth:150}
                    , {field: 'descript', title: '备注', minWidth:200}
                    ,{fixed: 'right', title:'操作', align:'center', minWidth:300, toolbar: '#msg-bar'}
                ];

                table.render({
                    elem: '#proxylist'
//                    , url: "{:url('player/transfer')}" //数据接口
                    , url: "{:url('playertrans/apply')}" //数据接口
                    , page: true //开启分页
                    , limit:15
                    , cols: [cols]
                });
            },


            //搜索
            search : function() {
                var roleid = $.trim($('#roleid').val());
                var classid = $.trim($('#classid').val());
                var start = $.trim($('#LAY-component-form-group-date').val());
                var end = $.trim($('#LAY-component-form-group-date2').val());



                //执行重载
                table.reload('proxylist', {
                    page: {
                        curr: 1 //重新从第 1 页开始
                    },
                    where: {
                        'roleid':roleid,
                        'classid':classid,
                        'start':start,
                        'end':end,
                    }
                });
            },

            //操作事件
            extraEvent : function () {
                //编辑
                table.on('tool(proxylist)', function(obj) {
                    var data = obj.data //获得当前行数据
                        ,layEvent = obj.event; //获得 lay-event 对应的值
                    tr = obj.tr; //获得当前行 tr 的DOM对象
                    if (layEvent === 'detail') {

                    } else if (layEvent === 'ganme') { //删除
                        window.location.href='gameLog?roleid='+data.id;
                    }else if(layEvent === 'cold'){
                        window.location.href='coinLog?roleid='+data.id;
                    }else if(layEvent === 'delete'){

                    }
                });
            },


            init : function() {
                form.render(null, 'component-form-group');
                laydate.render({
                    elem: '#LAY-component-form-group-date'
                    ,format:'yyyy-MM-dd'
                    ,max:0
                    ,btns: ['clear', 'confirm']
                });
                laydate.render({
                    elem: '#LAY-component-form-group-date2'
                    ,format:'yyyy-MM-dd'
                    ,max:0
                    ,btns: ['clear', 'confirm']
                });
                main.extraEvent();
                main.renderData();
                $('#search').on('click', function(e) {
                    e.preventDefault();
                    main.search();
                });
            }
        };

        main.init();
    });
</script>
{/block}